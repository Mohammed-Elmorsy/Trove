generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Product Model (Milestone 2)
model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  imageUrl    String?
  category    String?
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("products")
}

